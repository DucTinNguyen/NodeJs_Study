<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="css/style.css" />
</head>

<body>
  <div class="topnav">
    <a class="active" href="#home">Home</a>
    <a href="#news">News</a>
    <a href="#contact">Contact</a>
    <a href="#about">About</a>
  </div>

  <div style="padding-left: 16px">
    <h2>List users</h2>
    <!-- Data -->
    <!-- <%= dataUser%> -->
    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Email</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% for(let i=0; i < dataUser.length; i++) { %>
          <tr>
            <td>
              <%= dataUser[i].id %>
            </td>
            <td>
              <%= dataUser[i].name %>
            </td>
            <td>
              <%= dataUser[i].email %>
            </td>
            <td>
              <%= dataUser[i].address %>
            </td>
            <td>
              <button type="button">
                <a href="/detail/user/<%=dataUser[i].id%>">Detail</a>
              </button>
              <form style="display:inline-block" action="/edit-user/<%=dataUser[i].id%>" method="GET">
                <button type="submit">Edit</button>
              </form>
              <form style="display:inline-block" action="/delete-user/<%=dataUser[i].id%>" method="POST">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
    <div class="wrap_form">
      <h2>Create User</h2>
      <form action="/create-new-user" method="POST">
        <label for="fname">First name:</label><br />
        <input type="text" id="fname" name="fname" /><br />
        <label for="lname">Last name:</label><br />
        <input type="text" id="lname" name="lname" /><br /><br />
        <label for="email">Email:</label><br />
        <input type="email" id="email" name="email" /><br /><br />
        <label for="address">Address:</label><br />
        <input type="text" id="address" name="address" /><br /><br />
        <input type="submit" value="Submit" />
      </form>
    </div>

  </div>
</body>

</html>